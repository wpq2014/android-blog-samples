<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wpq.sample.custom_recyclerview">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".HeaderAndFooterActivity" android:label="@string/headerAndFooter"/>
        <activity android:name=".LinearLayoutManagerActivity" android:label="@string/LinearLayoutManager"/>
        <activity android:name=".GridLayoutManagerActivity" android:label="@string/GridLayoutManager"/>
        <activity android:name=".StaggeredGridlayoutManagerActivity" android:label="@string/StaggeredGridLayoutManager"/>
        <activity android:name=".MultiViewTypeActivity1" android:label="@string/MultiViewType1"/>
        <activity android:name=".MultiViewTypeActivity2" android:label="@string/MultiViewType2"/>

        <service android:name=".service.GirlService"/>
    </application>

</manifest>